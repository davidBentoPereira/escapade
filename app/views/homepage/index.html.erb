<h1 class="display-4">Timeline</h1>



<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @posts.each do |post| %>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.content %></p>
          <p class="card-text text-muted"><%= post.created_at %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
