<div class="row justify-content-between">
  <div class="col-1">
    <%= link_to root_path do %>
      <button type="button" class="btn btn-primary">Accueil</button>
    <% end %>
  </div>

  <div class="col-2">

    <%= link_to new_post_path do %>
      <button type="button" class="btn btn-primary">Ajouter un post</button>
    <% end %>
  </div>

  <div class="col">
    <%= link_to admin_posts_path do %>
      <button type="button" class="btn btn-primary">Administration</button>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="col">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <button type="button" class="btn btn-danger">Déconnexion</button>
      <% end %>
    </div>

    <p>
      <%= link_to "Modifier email / mot de passe", edit_user_registration_path do %>
        Connecté comme : <%= current_user.email %>
      <% end %>
    </p>

  <% else %>
    <div class="col">
      <%= link_to new_user_session_path do %>
        <button type="button" class="btn btn-primary">Connexion</button>
      <% end %>
    </div>

    <div class="col">
      <%= link_to new_user_registration_path do %>
        <button type="button" class="btn btn-info">Inscription</button>
      <% end %>
    </div>
  <% end %>
</div>
